<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utt.cntt.httt.manager.activity.GioHangActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtgiohangtrong"
        android:text="Giỏ hàng trống"
        android:textSize="18sp"></TextView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Giỏ hàng"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#36DD07"></androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:id="@+id/recycleviewgiohang"
        app:layout_constraintTop_toBottomOf="@id/toobar"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_marginBottom="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnmuahang"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="Tổng tiền"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/txttongtien"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="50.000"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <Button
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnmuahang"
        android:text="Mua hàng"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>